<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.images.ImagesActivity"
    android:background="@drawable/background"
    >
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerView"
    />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/input_images_size"
    app:layout_constraintBottom_toTopOf="@id/save_images_size"
     app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:hint="@string/input_number"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:background="@drawable/edittext_style"
    android:textAlignment="center"
    />

 <androidx.appcompat.widget.AppCompatButton
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:id="@+id/save_images_size"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     android:text="@string/download"
     android:background="@drawable/corners_background_grey_btn"
     />

</androidx.constraintlayout.widget.ConstraintLayout>