<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.aboutMe.AboutMeActivity"
    android:background="@color/grey"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/no_photography_24"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10sp"

        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/user_name"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/user_image"
    android:textSize="22sp"
    android:textStyle="normal"
    android:textColor="@color/black"
    android:layout_marginTop="10sp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_surName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_name"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/user_education"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/user_surName"
       android:textSize="22sp"
       android:textStyle="normal"
       android:textColor="@color/black"
       android:layout_marginTop="10sp"
       />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/user_company_name"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/user_education"
          android:textSize="22sp"
          android:textStyle="normal"
          android:textColor="@color/black"
          android:layout_marginTop="10sp"
          />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_company_position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_company_name"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:background="@drawable/corners_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="40sp"
        android:text="@string/next_activity"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/nextActivity"
        />

</androidx.constraintlayout.widget.ConstraintLayout>